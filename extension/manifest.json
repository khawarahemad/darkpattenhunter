{
  "manifest_version": 3,
  "name": "DarkPatternHunter",
  "version": "1.0.0",
  "description": "Detects and visualizes dark patterns on web pages, empowering users against deceptive UX.",
  "permissions": [
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_title": "DarkPatternHunter"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
